<%= form_tag  @action, :name => "searchForm", method: :get do %>
  <%= search_field_tag :search, params[:search], placeholder: "Search" %>
  <%= select_tag :option, options_for_select(@search_options, @current_selection) %>
  <% if action_name == "search" %>
    <%= select_tag :category, options_for_select(@categories, @category_selection), include_blank: true %>
  <% end %>
  <%= submit_tag "Search" %>
<% end %>
