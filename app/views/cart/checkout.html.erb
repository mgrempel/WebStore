<div>
  <h1>Checkout</h1>

  <div>
    <table>
      <% @items.each do |item| %>
      <% item_price = if item.markdown != 0
                              item.markdown
                            else
                              item.price
                            end %>
        <tr>
          <td><%= item.name %></td>
          <td><%= @cart[item.id.to_s] %></td>
          <td>$<%= @cart[item.id.to_s].to_i * item_price %></td>
        </tr>
        <% @total += item_price.to_d * @cart[item.id.to_s].to_d%>
      <% end %>
      <tr>
      <td></td>
      <td></td>
      <td>Total: $<%= @total %></td>
      </tr>
    </table>
  </div>
</div>