<div>
  <h1>Home page</h1>

  <div id="Categories">
    <h2>All Categories</h2>
  </div>
  <div id="Products">
    <h2>All Items</h2>
    <table>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <% puts product.markdown == 0 %>
          <% if (product.markdown != 0) %>
            <td>$<%= product.markdown %></td>
            <td>Sale!</td>
          <% else %>
            <td>$<%= product.price %></td>
            <td>Regular</td>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
</div>
